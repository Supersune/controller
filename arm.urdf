<?xml version="1.0"?>
<robot name="oneArm">
    <link name="base_link">
        <visual>
            <geometry>
                <cylinder length="0.1" radius="0.05" />
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0" />
            <material name="yellow">
                <color rgba="1 1 0 1" />
            </material>
        </visual>
    </link>

    <joint name="joint1" type="revolute">
        <parent link="base_link" />
        <child link="link1" />
        <origin xyz="0 0 0.1" />
        <axis xyz="0 0 1" />
    </joint>
</robot>
